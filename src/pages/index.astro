---
import BaseLayout from '@layouts/BaseLayout.astro';
import { getAllSketches } from '@/sketchMetadata.js';

const sketches = getAllSketches();
---

<BaseLayout title="Donuts" description="Creative coding experiments.">
  <h1>Donuts</h1>
  <p>Creative coding experiments.</p>
  <h2>Available sketches</h2>
  <ul>
    {sketches.map((sketch) => (
      <li>
        <a href={`/${sketch.id}/`}>{sketch.title}</a>
      </li>
    ))}
  </ul>
</BaseLayout>
